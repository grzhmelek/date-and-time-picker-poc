<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DateAndTimePickerPoc" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/teal_200</item>-->
        <!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->


        <item name="alertDialogTheme">@style/Theme.MaterialComponents.Dialog.Alert</item>
    </style>

    <style name="Theme.DateAndTimePickerPoc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DateAndTimePickerPoc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DateAndTimePickerPoc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DateAndTimePicker" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/Theme.DateAndTimePickerTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.DateAndTimePickerButton</item>
    </style>

    <style name="Theme.DateAndTimePickerTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Theme.DateAndTimePickerButton" parent="android:Widget.ActionButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>